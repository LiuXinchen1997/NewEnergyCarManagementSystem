<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.kemingxiu.test.ModifyPasswordActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:showIn="@layout/activity_modify_password">

    <EditText
        android:id="@+id/editText_newpwd2"
        android:layout_width="210dp"
        android:layout_height="46dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:inputType="textPassword"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_newpwd"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/editText_newpwd"
        android:layout_width="210dp"
        android:layout_height="46dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:inputType="textPassword"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_oldpwd" />

    <TextView
        android:id="@+id/textView_newpwd2"
        android:layout_width="120dp"
        android:layout_height="46dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="40dp"
        android:text="新密码确认："
        android:textAlignment="center"
        android:textSize="20dp"
        app:layout_constraintEnd_toStartOf="@+id/editText_newpwd2"
        app:layout_constraintTop_toBottomOf="@+id/textView_newpwd"
        tools:text="新密码确认：" />

    <TextView
        android:id="@+id/textView_oldpwd"
        android:layout_width="120dp"
        android:layout_height="46dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="48dp"
        android:text="原密码："
        android:textAlignment="center"
        android:textSize="25dp"
        app:layout_constraintEnd_toStartOf="@+id/editText_oldpwd"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="原密码：" />

    <TextView
        android:id="@+id/textView_newpwd"
        android:layout_width="120dp"
        android:layout_height="46dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="36dp"
        android:text="新密码："
        android:textAlignment="center"
        android:textSize="25dp"
        app:layout_constraintEnd_toStartOf="@+id/editText_newpwd"
        app:layout_constraintTop_toBottomOf="@+id/textView_oldpwd"
        tools:text="新密码：" />

    <Button
        android:id="@+id/button_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="76dp"
        android:text="提交"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.971"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_newpwd2"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/editText_oldpwd"
        android:layout_width="210dp"
        android:layout_height="46dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="48dp"
        android:ems="10"
        android:inputType="textPassword"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>
